      <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="5.0.0" />
      <PackageReference Include="PeanutButter.DuckTyping" Version="2.0.38" />
      <PackageReference Include="PeanutButter.Utils" Version="2.0.38" />
